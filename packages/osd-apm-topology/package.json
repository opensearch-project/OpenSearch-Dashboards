{
  "name": "@osd/apm-topology",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "main": "./target/node/index.js",
  "browser": "./target/web/index.js",
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i src/celestial.css -o src/_celestial.generated.scss --minify && node scripts/strip-layers.js",
    "build:babel:node": "BABEL_ENV=node babel src --out-dir target/node --extensions '.ts,.tsx' --copy-files --quiet",
    "build:babel:web": "BABEL_ENV=web babel src --out-dir target/web --extensions '.ts,.tsx' --copy-files --quiet",
    "build:babel": "yarn build:babel:node && yarn build:babel:web",
    "build:clean": "rm -f target/node/celestial.css target/web/celestial.css",
    "build": "yarn build:css && yarn build:babel && yarn build:clean",
    "osd:bootstrap": "yarn build",
    "osd:watch": "BABEL_ENV=node babel src --out-dir target/node --extensions '.ts,.tsx' --copy-files --watch"
  },
  "dependencies": {
    "@dagrejs/dagre": "^1.1.5",
    "@xyflow/react": "^12.8.2",
    "ramda": "^0.30.1"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.17",
    "@types/ramda": "^0.30.1",
    "tailwindcss": "^4.0.17"
  }
}
